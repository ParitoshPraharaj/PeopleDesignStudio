#notes-form
	=form_for :note, url: notes_path do |objNote|
		=objNote.text_field :title, placeholder: "Note's Name", class: "controls border-bottom-dashed-blue", id: "note-title"
		
		.row
			.col-md-8	
				=objNote.text_area :description, placeholder: "Write your note...", class: "controls", id: "note-description"
		
		=objNote.submit 'Save'
	end
%h3.copy-navy-blue-sports.sit-center
	Edit Your Post
	
=form_for @blog, url: blog_path, method: :patch do |objBlog|
	.row
		.col-md-8.margin-left-one-hundreds
			.form-group
				=objBlog.label :title, "Title of the Post", class: 'copy-navy-blue-sports'
				=objBlog.text_field :title, class: "controls", placeholder: "Your Heading goes here ..."
	.row
		.col-md-8.margin-left-one-hundreds
			.form-group		
				=objBlog.label :content, "Body ...", class: "copy-navy-blue-sports"
				=objBlog.text_area :content, class: "controls", placeholder: "Start from here ..."
	
	=objBlog.submit 'It is Done', id: 'button-pale-cornflour-blue', class: 'margin-left-four-hundreds'	